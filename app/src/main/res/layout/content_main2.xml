<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Main2Activity"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_main2">

    <EditText
        android:id="@+id/Colaborador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Nome do Colaborador"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="62dp" />

    <EditText
        android:id="@+id/Setor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Setor"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="122dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:text="Cadastrar novo Fiado"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/Quantidade"
        android:layout_width="108dp"
        android:layout_height="38dp"
        android:contentDescription="Quantidade"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="236dp" />

    <TextView
        android:id="@+id/Valor"
        android:layout_width="69dp"
        android:layout_height="37dp"
        android:text="Valor"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="237dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eu aceito e os termos de uso"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="472dp" />

    <Button
        android:id="@+id/Finalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        tools:layout_editor_absoluteX="252dp"
        tools:layout_editor_absoluteY="455dp" />

    <com.simplify.ink.InkView
        android:id="@+id/ink"
        android:layout_width="368dp"
        android:layout_height="130dp"
        android:background="#e5d7d7"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="305dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="178dp"
        android:layout_height="30dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="186dp" />

    <ListView
        android:id="@+id/list"
        android:layout_width="174dp"
        android:layout_height="120dp"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="176dp" />

</android.support.constraint.ConstraintLayout>